<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.iti.client.iti_gp_client.screens.order_description.OrderActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createRequest"
        android:textColor="@color/header"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packageInfo"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="66dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="118dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/order_titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:textColor="@color/textColor" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/order_descriptionEditText"
        android:layout_width="287dp"
        android:layout_height="120dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/typeHere"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textColorHighlight="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uploadImg"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="367dp" />

    <ImageView
        android:id="@+id/order_image"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:src="@mipmap/ic_upload_image"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="395dp" />


</android.support.constraint.ConstraintLayout>
