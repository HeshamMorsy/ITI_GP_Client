<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.signup.SignUpActivity"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="#ffffff"
    app:behavior_hideable="false"
    android:id="@+id/verificationSheet">

    <LinearLayout
        android:id="@+id/fragment_history_bottom_sheet_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validation Code"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/verificationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter verification code"
            android:inputType="text"
            android:letterSpacing="2.5"
            android:gravity="center"
            tools:text="1234"
            />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/confirmVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="#FFF"
            android:background="@drawable/jungle_button"
            />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/sendVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Verification Code"
            android:background="@drawable/verification_btn"
            android:textColor="@color/header"/>
    </LinearLayout>


</LinearLayout>