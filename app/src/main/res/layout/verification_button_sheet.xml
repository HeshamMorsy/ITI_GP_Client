<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buttonsheet_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.signup.SignUpActivity"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="#ffffff"
    app:behavior_hideable="false"
    android:id="@+id/verificationSheet">

    <LinearLayout
        android:id="@+id/fragment_history_bottom_sheet_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:layout_marginTop="@dimen/buttonsheet_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validation Code"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:layout_marginTop="@dimen/buttonsheet_margin"
            android:id="@+id/verificationCode"
            android:layout_gravity="center"
            style="@style/editText_style"
            android:hint="enter verification code"
            android:inputType="text"
            android:letterSpacing="2.5"
            android:gravity="center"
            tools:text="1234"
            />
        <Button
            android:layout_marginTop="@dimen/buttonsheet_margin"
            android:id="@+id/confirmVerification"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="Confirm"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:background="@drawable/jungle_button"
            />
        <Button
            android:layout_marginTop="@dimen/buttonsheet_margin"
            android:layout_marginBottom="@dimen/signupButton_marginbuttom"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/sendVerification"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="Send Verification Code"
            android:background="@drawable/verification_btn"
            android:textColor="#54545a"/>
    </LinearLayout>


</LinearLayout>